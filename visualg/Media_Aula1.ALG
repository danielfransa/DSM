Algoritmo "Média"
Var
// Seção de Declarações das variáveis 
Nota1,Nota2,Soma,Media : Real

Inicio
// Informar a nota ENTRADAS
escreva ("Informe a Primeira Nota: ")
leia(Nota1)

escreval("Informe a Segunda Nota:")
leia(Nota2)

//Processamento
Soma:= Nota1+Nota2

Media:=Soma/2

//Saídas
escreva("A média é: " ,Media)

Fimalgoritmo