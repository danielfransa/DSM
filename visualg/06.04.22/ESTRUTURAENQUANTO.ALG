Algoritmo "estruturaenquanto"
//Recebe o nome e escreva esse nome 10 vezes
Var
nome : caracter
cont : inteiro
Num : inteiro

Inicio
cont := 0
Num := 1
escreval("Me diga seu nome")
leia(nome)

    enquanto (cont < 100) faça
        escreval (Num, "- Olá, ", nome)
        Num := Num + 1
        cont := cont + 1
    fimenquanto



Fimalgoritmo